{
  "name": "appup",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "repository": "https://github.com/appup-react-native",
  "author": "Vince Vella <vincevella0@gmail.com> (https://github.com/vincentvella)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/appup-react-native/issues"
  },
  "homepage": "https://github.com/appup-react-native#readme",
  "scripts": {
    "develop-network": "yarn workspace @appup/network develop",
    "develop-react-native": "yarn workspace @appup/react-native develop",
    "develop": "run-p develop-*",
    "typescript-network": "yarn workspace @appup/network typescript",
    "typescript-react-native": "yarn workspace @appup/react-native typescript",
    "typescript": "run-p typescript-*",
    "lint": "eslint --ext .js,.ts,.tsx packages/*/src/*"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.3.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@release-it/conventional-changelog": "^1.1.4",
    "commitlint": "^8.3.5",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "nodemon": "^2.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.5",
    "release-it": "^13.5.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint && yarn typescript"
    }
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s",
      "tagName": "v%s"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  }
}
