{
  "name": "@app-up/react-native",
  "version": "0.1.0",
  "private": true,
  "description": "React Native utility for connecting to the AppUp service",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "release": "release-it",
    "develop": "nodemon -e js,ts --watch src --exec \"yarn run prepare\""
  },
  "keywords": [
    "react-native"
  ],
  "dependencies": {
    "@app-up/network": "0.1.0"
  },
  "devDependencies": {
    "@react-native-community/bob": "^0.14.0",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "jest": "^25.1.0",
    "react": "~16.9.0",
    "react-native": "~0.61.5",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
