{
  "name": "@app-up/react-native",
  "version": "1.0.0",
  "private": false,
  "description": "React Native utility for connecting to the AppUp service",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/react-native/index.d.ts",
  "react-native": "src/index.tsx",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "prepare": "bob build",
    "release": "release-it",
    "develop": "nodemon -e js,ts --watch src --exec \"yarn run prepare\""
  },
  "keywords": [
    "react-native"
  ],
  "dependencies": {
    "@app-up/network": "1.0.0",
    "query-string": "^6.12.1"
  },
  "devDependencies": {
    "@react-native-community/bob": "^0.14.0",
    "@testing-library/react": "^10.0.4",
    "@testing-library/react-hooks": "^3.2.1",
    "@types/jest": "^25.1.2",
    "@types/react": "^16.9.19",
    "@types/react-native": "0.61.10",
    "fetch-mock": "^9.9.0",
    "jest": "^25.1.0",
    "react": "~16.9.0",
    "react-dom": "16.9.0",
    "react-test-renderer": "16.9.0",
    "typescript": "^3.7.5"
  },
  "peerDependencies": {
    "react": "*"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!react-native|@testing-library/react).+\\.js$"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/lib/"
    ]
  },
  "@react-native-community/bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  }
}
